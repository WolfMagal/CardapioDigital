<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemMessageContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="13dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ede7f6"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/imagemRestaurante"
            android:layout_width="63dp"
            android:layout_height="59dp"
            android:src="@drawable/img_restaurante"
            android:layout_gravity="right"/>
        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nomeProduto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Nome do Produto" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/detalheProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                tools:text="Detalhes produto" />

            <TextView
                android:id="@+id/valorProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                tools:text="R$ 10.00" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>






</LinearLayout>
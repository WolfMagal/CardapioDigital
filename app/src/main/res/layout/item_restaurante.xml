<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemMessageContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#ede7f6"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">
        <ImageView
            android:id="@+id/imagemRestaurante"
            android:layout_width="63dp"
            android:layout_height="59dp"
            android:src="@drawable/img_restaurante"
            android:layout_gravity="left"/>

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/descricaoRestaurante"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="70dp"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Jamie's Italian" />

            <TextView
                android:id="@+id/tipoRestaurante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_gravity="left"
                tools:text="Restaurante Italiano" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
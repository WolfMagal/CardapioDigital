<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="13dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ede7f6"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="20dp">
        <ImageView
            android:id="@+id/imagemRestaurante"
            android:layout_width="63dp"
            android:layout_height="59dp"
            android:src="@drawable/img_restaurante"
            android:layout_gravity="left"/>

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/numeroPedido"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="70dp"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Nº Pedido: 123" />

            <TextView
                android:id="@+id/descricaoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_gravity="left"
                tools:text="Descrição do Pedido" />

            <TextView
                android:id="@+id/valorPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_gravity="left"
                tools:text="Valor total: R$ 100,00" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</layout>